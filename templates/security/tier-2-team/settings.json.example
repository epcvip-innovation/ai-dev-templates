{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "NotebookRead",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git branch *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git checkout *)",
      "Bash(git fetch *)",
      "Bash(git pull *)",
      "Bash(git show *)",
      "Bash(git stash *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(wc *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(chmod 777 *)",
      "Bash(curl * | sh *)",
      "Bash(curl * | bash *)",
      "Bash(wget * | sh *)",
      "Bash(eval *)",
      "Bash(exec *)",
      "Bash(command *)",
      "Bash(bash -c *)",
      "Bash(sh -c *)",
      "Bash(env *)",
      "Bash(xargs *)",
      "Bash(nohup *)",
      "Bash(timeout *)",
      "Bash(watch *)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Write(.env)",
      "Write(.env.*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pretooluse-command-filter.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
