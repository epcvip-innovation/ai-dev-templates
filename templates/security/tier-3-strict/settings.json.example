{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "NotebookRead",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git branch *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git show *)",
      "Bash(git stash *)",
      "Bash(ls *)",
      "Bash(pwd)",
      "Bash(mkdir *)",
      "Bash(wc *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(git reset --hard *)",
      "Bash(chmod 777 *)",

      "Bash(eval *)",
      "Bash(exec *)",
      "Bash(command *)",
      "Bash(bash -c *)",
      "Bash(sh -c *)",
      "Bash(env *)",
      "Bash(xargs *)",
      "Bash(nohup *)",
      "Bash(timeout *)",
      "Bash(watch *)",

      "Bash(node -e *)",
      "Bash(node --eval *)",
      "Bash(perl -e *)",
      "Bash(ruby -e *)",
      "Bash(python -c *)",
      "Bash(python3 -c *)",

      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(sed *)",
      "Bash(awk *)",

      "Bash(curl *)",
      "Bash(wget *)",

      "Bash(chmod 777 *)",
      "Bash(chmod -R *)",
      "Bash(chown -R *)",
      "Bash(mkfs *)",
      "Bash(dd *)",

      "Read(.env)",
      "Read(.env.*)",
      "Read(.env.local)",
      "Read(.env.production)",
      "Read(secrets/**)",
      "Read(**/id_rsa)",
      "Read(**/id_ed25519)",
      "Read(**/.npmrc)",
      "Read(**/.pypirc)",
      "Read(**/.netrc)",
      "Read(**/.pgpass)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Write(.env)",
      "Write(.env.*)",

      "WebFetch",
      "WebSearch"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(npm install *)",
      "Bash(pip install *)",
      "MCP"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pretooluse-command-filter.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
