import { defineConfig, devices } from '@playwright/test';

/**
 * Playwright configuration template.
 *
 * Copy to your project root as playwright.config.ts
 * Adjust baseURL, port, and webServer command for your app.
 *
 * Supports BASE_URL env var for testing against different environments:
 *   BASE_URL=https://your-app.com npx playwright test   # Test production
 *   npx playwright test                                  # Test localhost (default)
 */

// Support BASE_URL env var for flexible test targeting
const baseURL = process.env.BASE_URL || 'http://localhost:3000';
const isLocalhost = baseURL.includes('localhost');

export default defineConfig({
  // Test file location
  testDir: './test/e2e',

  // Run tests in parallel
  fullyParallel: true,

  // Fail CI if test.only() is left in code
  forbidOnly: !!process.env.CI,

  // Retry failed tests in CI
  retries: process.env.CI ? 2 : 0,

  // Limit workers in CI for stability
  workers: process.env.CI ? 1 : undefined,

  // HTML report
  reporter: 'html',

  use: {
    // Base URL for relative navigation (supports env var override)
    baseURL,

    // Capture trace on first retry (for debugging failures)
    trace: 'on-first-retry',

    // Record video on first retry
    video: 'on-first-retry',

    // Screenshot on failure
    screenshot: 'only-on-failure',
  },

  projects: [
    {
      name: 'chromium',
      use: { ...devices['Desktop Chrome'] },
    },
    {
      name: 'firefox',
      use: { ...devices['Desktop Firefox'] },
    },
    {
      name: 'mobile',
      use: { ...devices['iPhone 13'] },
    },
  ],

  // Auto-start dev server before tests (only when targeting localhost)
  webServer: isLocalhost ? {
    command: 'npm start',
    url: 'http://localhost:3000/health', // Health check endpoint
    reuseExistingServer: !process.env.CI,
    timeout: 30000,
  } : undefined,
});
